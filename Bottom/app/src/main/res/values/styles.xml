<resources>
    <!-- Base application theme. -->
    <style name="Basic" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!--custom font-family 적용-->
        <item name="android:fontFamily">@font/custom_font_family</item>
    </style>

    <style name="Brown" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/notificationBrownColorBar</item>
        <item name="colorPrimaryDark">@color/notificationBrownColorBarDark</item>
        <item name="colorAccent">@color/notificationBrownAccentColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!--custom font-family 적용-->
        <item name="android:fontFamily">@font/custom_font_family</item>
    </style>

    <style name="Yellow" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/notificationYellowColorBar</item>
        <item name="colorPrimaryDark">@color/notificationYellowColorBarDark</item>
        <item name="colorAccent">@color/notificationYellowAccentColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!--custom font-family 적용-->
        <item name="android:fontFamily">@font/custom_font_family</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/DarkColorBar</item>
        <item name="colorPrimaryDark">@color/DarkColorBarDark</item>
        <item name="colorAccent">@color/DarkAccentColor</item>
        <item name="android:windowBackground">@color/DarkBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!--custom font-family 적용-->
        <item name="android:fontFamily">@font/custom_font_family</item>
    </style>

</resources>